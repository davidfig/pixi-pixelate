{
  "name": "pixi-pixelate",
  "version": "0.1.0",
  "description": "draw proper pixelated graphic primitives for pixi.js (i.e., point, line, circle, ellipse, arc, and filled versions)",
  "main": "dist/pixelate.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "./node_modules/.bin/budo docs/code.js:index.js --dir docs",
    "build-demo": "./node_modules/.bin/browserify docs/code.js -o docs/index.js",
    "docs": "./node_modules/.bin/jsdoc -c .jsdoc.json",
    "standalone": "./node_modules/.bin/browserify docs/standalone.js -o docs/library.js -t [ babelify ]",
    "transpile": "./node_modules/.bin/babel src/ --out-dir dist --source-maps inline && cp src/defaults.json dist/defaults.json",
    "prepublishOnly": "npm run transpile && npm run build-demo && npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidfig/pixi-pixelate.git"
  },
  "keywords": [
    "PIXI",
    "pixi.js",
    "pixelate",
    "pixelated",
    "graphics"
  ],
  "author": "David Figatner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidfig/pixi-pixelate/issues"
  },
  "homepage": "https://github.com/davidfig/pixi-pixelate#readme",
  "peerDependencies": {
    "pixi.js": ">=4.6.0"
  },
  "dependencies": {
    "pixi-ease": "^0.18.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "budo": "^11.2.1",
    "clicked": "^2.0.0",
    "fork-me-github": "^1.2.0",
    "highlight.js": "^9.12.0",
    "jsdoc": "^3.5.5",
    "pixi.js": "^4.7.3",
    "settingspanel": "^2.0.0",
    "yy-counter": "^2.1.0",
    "yy-fps": "^0.6.0",
    "yy-jsdoc-template": "^1.3.0",
    "yy-random": "^1.6.0"
  }
}
